<?xml version="1.0"?>
<form xmlns="http://www.demandware.com/xml/form/2008-04-19" secure="false">
    <field
        formid="newpassword"
        label="label.input.newpassword.profile"
        mandatory="true"
        min-length="8"
        max-length="255"
        range-error="error.message.8_255characters"
        value-error="ValueErrorText"
        type="string"/>

    <field
        formid="newpasswordconfirm"
        label="label.input.newpasswordconfirm.profile"
        mandatory="true"
        min-length="8"
        max-length="255"
        range-error="error.message.8_255characters"
        value-error="ValueErrorText"
        type="string"/>

    <field
        formid="savepaymentmethod"
        label="label.input.savepaymentmethod.profile"
        type="boolean"
        checked="true"
        default-value="true"
        binding="savepaymentmethod"
        mandatory="false"/>
</form>
